<odoo>

    <record id="pop_config_view_form" model="ir.ui.view">
        <field name="name">pop.config.form.view</field>
        <field name="model">pop.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button icon="fa-list" string="Sessions" name="%(pop_session_action)d" type="action" context="{'search_default_pop_id': id}" class="oe_stat_button"/>
                    </div>
                    <div class="oe_title" id="title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="id" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="allow_concurrent_sessions"/>
                            <field name="sequence_id" attrs="{'invisible': [('allow_concurrent_sessions', '=', True)], 'required': [('allow_concurrent_sessions', '=', False)]}" domain="[('code', '=', 'pop_config_sequence')]" context="{
                                'default_padding': 6,
                                'default_prefix': 'CODE-',
                                'default_code': 'pop_config_sequence'}"/>
                            <field name="allowed_res_users_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="journal_ids" context="{'default_type': 'cash'}" widget="many2many_tags"/>
                            <field name="cash_control_journal_ids" domain="[('id', 'in', journal_ids) , ('type', '=', 'cash')]" widget="many2many_checkboxes"/>
                            <field name="max_diff" attrs="{'invisible': [('cash_control_journal_ids', '=', [])]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pop_config_view_tree" model="ir.ui.view">
        <field name="name">view_pop_config.view.tree</field>
        <field name="model">pop.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_pop_config_kanban" model="ir.ui.view">
        <field name="name">pop.config.kanban.view</field>
        <field name="model">pop.config</field>
        <field name="arch" type="xml">
            <kanban create="false" class="o_kanban_dashboard">
                <field name="name"/>
                <field name="current_session_id"/>
                <field name="allow_concurrent_sessions"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title mb16">
                                    <div class="o_primary">
                                        <t t-esc="record.name.value"/>
                                    </div>
                                    <!-- TODO iterar directamente en los users? suma? o lo hacemos m2o y ponemos el avatar?-->
                                    <!-- <div class="o_secondary mt16"><t t-esc="record.pop_session_username.value || unused_message"/></div> -->
                                </div>
                                <!-- por ahi lo podemos implementar para ir al listado de sesiones -->
                                <!-- <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/></a>
                                </div> -->
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6 o_kanban_primary_left" t-if="!record.allow_concurrent_sessions.raw_value">
                                        <button class="btn btn-primary" t-if="record.current_session_id.raw_value" name="action_open_session" type="object">Abrir Sesión</button>
                                        <button class="btn btn-primary" t-if="!record.current_session_id.raw_value" name="action_open_session" type="object">Nueva Sesión</button>
                                    </div>
                                    <div class="col-6 o_kanban_primary_left" t-if="record.allow_concurrent_sessions.raw_value">
                                        <button class="btn btn-primary" name="%(pop_session_action)d" context="{'search_default_pop_id': id}" type="action">Ver Sesiones</button>
                                    </div>
                                    <div class="col-6 o_kanban_primary_right">

                                    </div>
                                </div>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_pop_config_search" model="ir.ui.view">
        <field name="name">pop.config.search.view</field>
        <field name="model">pop.config</field>
        <field name="arch" type="xml">
            <search string="Configuración de caja">
                <field name="name"/>
                <!-- <filter string="Inactive" name="inactive" domain="[('active', '=', False)]" /> -->
                <!-- <field name="stock_location_id" groups="stock.group_stock_multi_locations" /> -->
            </search>
        </field>
    </record>

    <record id="pop_config_action" model="ir.actions.act_window">
        <field name="name">Point of Payments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pop.config</field>
        <field name="view_mode">kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Definir una caja nueva
            </p><p>
                Gestión de cajas
            </p>
        </field>
    </record>

    <record id="pop_config_settings_action" model="ir.actions.act_window">
        <field name="name">Point of Payments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pop.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Definir una caja nueva
            </p><p>
                Gestión de cajas
            </p>
        </field>
    </record>

    <menuitem id="menu_pop_dashboard"
        name="Point of Payments"
        action="pop_config_action"
        parent="account_payment_group.menu_finance_bank_and_cash"
        sequence="1"/>

    <menuitem id="menu_pop_config"
        name="Point of Payments"
        parent="account.root_payment_menu"
        action="pop_config_settings_action"
        sequence="100"/>

</odoo>
