<?xml version="1.0" ?>
<odoo>

    <record id="point_of_payment_company_rule" model="ir.rule">
        <field name="name">Point of Payment multi-company</field>
        <field name="model_id" ref="model_pop_config"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="point_of_payment_session_company_rule" model="ir.rule">
        <field name="name">Point of Payment Session multi-company</field>
        <field name="model_id" ref="model_pop_session"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="point_of_payment_user" model="ir.rule">
        <field name="name">Point of Payment Invoicing User</field>
        <field name="model_id" ref="model_pop_config"/>
        <field name="domain_force">[('allowed_res_users_ids', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
    </record>

    <record id="point_of_payment_admin" model="ir.rule">
        <field name="name">Point of Payment Invoicing Manager</field>
        <field name="model_id" ref="model_pop_config"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_manager'))]"/>
    </record>

    <!-- invoicing user, only sessions -->
    <record id="point_of_payment_session_user" model="ir.rule">
        <field name="name">POP Session Invoicing User</field>
        <field name="model_id" ref="model_pop_session"/>
        <field name="domain_force">[('user_ids', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
    </record>

    <!-- admin user, all sessions -->
    <record id="point_of_payment_session_admin" model="ir.rule">
        <field name="name">POP Session Invoicing Manager</field>
        <field name="model_id" ref="model_pop_session"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_manager'))]"/>
    </record>

</odoo>
