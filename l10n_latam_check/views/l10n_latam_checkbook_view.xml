<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_l10n_latam_checkbook_tree" model="ir.ui.view">
        <field name="name">l10n_latam.checkbook.tree</field>
        <field name="model">l10n_latam.checkbook</field>
        <field name="arch" type="xml">
            <tree string="Checkbooks" decoration-muted="not active" editable="bottom">
                <field name="type"/>
                <field name="next_number" attrs="{'invisible': [('type', '=', 'electronic')]}"/>
                <field name="range_to" attrs="{'invisible': [('type', '=', 'electronic')]}"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="action_l10n_latam_checkbook" model="ir.actions.act_window">
        <field name="name">Checkbooks</field>
        <field name="res_model">l10n_latam.checkbook</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('journal_id', '=', active_id)]</field>
        <field name="context">{'active_test': False}</field>
    </record>

</odoo>
