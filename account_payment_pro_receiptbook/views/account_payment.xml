<odoo>
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <form>
                <field name="document_sequence_id" invisible="1"/>
                <field name="document_type_id" invisible="1"/>
                <field name="document_number" invisible="1"/>
                <field name="highest_name" invisible="1"/>
                <field name="sequence_type" invisible="1"/>

            </form>
            <field name="journal_id" position="before">
                <field name="receiptbook_id" invisible="is_internal_transfer" readonly="state != 'draft'"/>
                <field name="document_number"
                    readonly="state != 'draft'" invisible="sequence_type != 'manual'"/>
            </field>
        </field>
    </record>
</odoo>
