<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.payment.register.form.inherited</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <group name='group3' position="before">
                <field name="payment_method_code" invisible="1"/>
                <field name="type_tax_use" invisible="1"/>
                <group attrs="{'invisible': [('payment_method_code', 'not in', ['withholding_in', 'withholding_out'])]}">
                    <div colspan="2">
                        <group name="withholding_data">
                            <field name="tax_withholding_id"  options="{'no_create': True}" domain="[('type_tax_use', '=', partner_type), ('company_id', '=', company_id)]" attrs="{'required': [('payment_method_code', 'in', ['withholding_in', 'withholding_out'])]}"/>
                            <field name="withholding_number"/>
                            <field name="withholding_base_amount" attrs="{'required': [('payment_method_code', 'in', ['withholding_in', 'withholding_out'])]}"/>
                        </group>
                    </div>
                </group>
            </group>
        </field>
    </record>
</odoo>
