    <field name="res_model">account.payment.multi</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form,graph</field>
    <field name="context">{'default_payment_type': 'outbound'}</field>
    <field name="domain">[('partner_type', '=', 'supplier')]</field>
    <field name="view_id" ref="view_account_supplier_payment_multi_tree"/>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to register a payment
        </p><p>
          Payments are used to register liquidity movements (send or collect).
          You can then process those payments by your own means or by using installed facilities.
        </p>
    </field>
</record>

<menuitem action="action_account_payments_multi" id="menu_action_account_payments_multi_receivable" parent="account.menu_finance_receivables" sequence="20" groups="account.group_account_user"/>
<menuitem action="action_account_payments_multi_payable" id="menu_action_account_payments_multi_payable" parent="account.menu_finance_payables" sequence="20" groups="account.group_account_user"/>
